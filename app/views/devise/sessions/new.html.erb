<div class="row" >
<div class="col-lg-4 col-lg-offset-4">
 <p class="h2 text-center"> 登录 </p>
<div style="min-height: 820px">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login,"用户名或邮箱" %><br />
    <%= f.text_field :login, autofocus: true,class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password,"密码" %><br />
    <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,"记住我" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登录",class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div> 
</div>