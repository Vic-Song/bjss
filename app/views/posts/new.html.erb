<div style="background-color: #fff; min-height: 682px;">
  <div class="container" >
    <div class="row">
      <div class="col-lg-4">
        <% if @course.posts.count!=0 %>
          <ul class="nav nav-pills nav-stacked">
        <% for post in @course.posts %>
          <li class="h4"><%= link_to post.title, post %></li>
        <% end %>
        </ul>
        <% else %>
        <% end%>

      </div>

        <div class="col-lg-8 ">

          <%= render 'form' %>




        </div>

      </div>
    </div>
  </div>





