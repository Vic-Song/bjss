<div class="container">
  <div class="page-header">
    <h2><%= @course.title%></h2>
  </div>
  <ul class="nav nav-tabs">
    <li class="h4"><%= link_to "视频区",@course.chapters.first.videos.first%></li>
    <li class="active h4" style="font-weight: bolder"><a href="">讨论区</a> </li>
  </ul>
</div>
