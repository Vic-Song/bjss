	<div class="page-header">
	<h2>课程管理 <span class="badge"><%= @courses.count%></span> &nbsp;&nbsp;&nbsp; <%= link_to '新建课程', new_course_path,class:"btn btn-default" %> </h2> 
	
	</div>
	<div class="row">
	<% @courses.each do |c| %>
	
	<div class="col-lg-6">
	<div class="thumbnail">
		<div class="row" style="margin-top: 10px">
		
		<div class="col-lg-6">
		
			<strong><%= c.title%>&nbsp;&nbsp;</strong><span class="badge"><%= c.chapters.count%></span>	
		
		</div> 
		<div class="col-lg-2">
			<%= link_to '新建章节', new_chapter_path(course_id:c.id),class:"btn btn-default btn-sm" %>
		</div>
		<div class="col-lg-4">
			<%= link_to '查看', c, class:"btn btn-default btn-sm" %> <%= link_to '编辑', edit_course_path(c),class:"btn btn-default btn-sm" %> <%= link_to '删除', c,class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		</div>
		<% c.chapters.each do |ch| %>
		<a data-toggle="collapse" href="#<%=ch.id%>">
		<div class="row" style="margin: 10px 0px 10px 10px">
		<div class="col-lg-6"><%= ch.title%>&nbsp;&nbsp;<span class="badge"><%= ch.videos.count%></span> </div>
		<div class="col-lg-2"><%= link_to '新建视频', new_video_path(chapter_id:ch.id),class:"btn btn-default btn-sm" %></div>
		<div class="col-lg-4">
			<%= link_to '查看', ch, class:"btn btn-default btn-sm" %> <%= link_to '编辑', edit_chapter_path(ch), class:"btn btn-default btn-sm"%> <%= link_to '删除', ch, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm" %>
		</div>

		</div>
		</a>
	<div id="<%=ch.id%>" class="panel-collapse collapse">
	<div class="panel-body">
		<div class="row">
		<div class="col-lg-11 col-lg-offset-1">
		<table class="table table-striped">
			<tbody>		
			<% ch.videos.each do |v|%>

			<tr>
			<td><%= v.title%></td>
			<td>
				<%= link_to '查看', v, class:"btn btn-default btn-sm" %> <%= link_to '编辑', edit_video_path(v), class:"btn btn-default btn-sm"%> <%= link_to '删除', v, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm" %>
			<% end %>	
			</td>
			</tr>

			
			</tbody>
		</table>
		</div>
		</div>
	</div>
	</div>
		<% end %>
	</div>
	</div>
		<% end %>

	</div>

	
